<div id="<%= update %>" class="fila" >
  <%= fila_listado @tipo_contrato, campos_listado("tipo_contrato"), update %>
  <div class="elementoderecha">
    <%= ventana_info_popup @tipo_contrato, {:campos => campos_listado("tipo_contrato") + campos_info("tipo_contrato"), :id => update + "_informacion" } %>
    <%= remote icono("lista", _("Campos Particulares")), url: {update: update + '_sub', action: :listado_campos, id: @tipo_contrato.id}, html: {id: update + '_campos'} %>
    <%= remote icono("documentos" + (@tipo_contrato.documento.empty? ? "" : "_r"), _("Ver plantillas asociadas")), url: {update: update + '_sub', action: :listado_documentos, id: @tipo_contrato.id}, html: {id: update + '_documentos'} %>
    <% if (@agente && @tipo_contrato.agente_id == @agente.id) || @agente.nil? %>
      <%= editar( :url => { :action => 'editar_nuevo', :id => @tipo_contrato, :update => update }) %> 
      <%= borrado( :url => { :action => 'eliminar', :id => @tipo_contrato, :update => update },  :texto => @tipo_contrato.nombre, :identificador => update )  %>
    <% else %>
      <div class="icono"></div>
      <div class="icono"></div> 
    <% end %>
  </div>
  <div id="<%= update %>_sub" class="linea"></div> 
</div>
