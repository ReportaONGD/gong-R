<%= comienzo_formulario( { :action => 'relacionar', :atributo => relacion }, true ) %>
  <%= selector relacion!="libro" ? relacion.capitalize : _("Cuenta"), "relacion", "relacion_id",  @relaciones , false, "2", {obligatorio: true, enriquecido: true}  %>
  <% if relacion == "area_actuacion" || relacion == "sector_poblacion" || relacion == "sector_intervencion" %>
    <% porcentajes = Array.new (20) {|x| [((x+1) * 5).to_s + "%", (((x + 1) * 0.05).to_s + "00").to_f ]}%>
    <%= selector( _("Porcentaje"), 'relacion', 'porcentaje', porcentajes, false ,"1_2") %>
  <% end %>
<%= final_formulario %>


