<div id="<%= update %>" class="fila" >
  <%= fila_listado @convocatoria, campos_listado("convocatoria"), update %>
  <div class="elementoderecha">
    <%= ventana_info_popup @convocatoria, {:campos => campos_listado("convocatoria") + campos_info("convocatoria"), :id => update + "_informacion" } %>
    <%= remote(icono("lista", _("Ver proyectos en la convocatoria")),  :url => {:update => update + "_sub", :action => 'proyectos', :id => @convocatoria.id}) %>
    <%= editar( :url => { :action => 'editar_nuevo', :id => @convocatoria, :update => update }) %> 
    <%= borrado( :url => { :action => 'eliminar', :id => @convocatoria, :update => update },  :texto => (@convocatoria.nombre), :identificador => update )  %>     
  </div>
  <div id="<%= update %>_sub" class="linea"></div> 
</div>
