

<%= comienzo_sublistado _("Documentos"), params[:update] %>
<div class="fila">
<%= modal icono("anadir"), {:action => 'nuevo_editar_documento', :update =>  params[:update],:definicion_estado_id => params[:definicion_estado_id]},_("Nuevo documento"), {:id => params[:update] + "_documento_anadir"} %>  
</div>

<% i = 0 %>
<% for documento in @documentos %>
   <div  id="<%= params[:update] %>_documentos_<%= (i += 1).to_s %>" class="fila" >
    <%= fila_listado documento, campos_listado ("definicion_estado_documento"), params[:update] + "_documentos_" + i.to_s %>
    <div class="elementoderecha">
      <%= modal( icono( "editar" ), {:update => params[:update], :action => 'nuevo_editar_documento', :id => documento.id, :definicion_estado_id => params[:definicion_estado_id]}, _("Editar documento"), :id => params[:update]+"_documentos_"+ i.to_s + "_editar" ) %>
      <%= modal_borrado icono( "borrar", _( "Eliminar documento" )), { :update => params[:update], :action => 'eliminar_documento', :id => documento.id, :definicion_estado_id => params[:definicion_estado_id] }, _('Eliminar documento'), documento.nombre, :id => params[:update] + "_documentos_" + i.to_s + "_borrar", :ajax => true %>      
    </div>
    <div class="linea"></div>
   </div>
<% end %>
<%= final_sublistado %> 
<br>

 
