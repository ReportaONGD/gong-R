        <% end %>

        <% url_ind = url_for( seccion: "proyectos", proyecto_id: @proyecto.id, menu: "ejecucion_tecnica", controller: "indicador" ) %>
        <%= caja_porcentaje total: ind_total, valor: ind_valor,
